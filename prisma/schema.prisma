generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String
  stream    String
  version   Int
  payload   String
}

model Tracker {
  id               String             @id @default(uuid())
  kind             String
  name             String
  value            Float
  createdAt        Int
  updatedAt        Int
  TrackerDatapoint TrackerDatapoint[]
}

model TrackerDatapoint {
  id        String   @id @default(uuid())
  value     Float
  tracker   Tracker  @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  trackerId String
  createdAt Int
}

model Project {
  id        String             @id @default(uuid())
  name      String
  createdAt Int
  updatedAt Int
  status    String             @default("active")
  Task      Task[]
}

model Task {
  id        String  @id @default(uuid())
  name      String
  createdAt Int
  updatedAt Int
  status    String  @default("active")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
}
